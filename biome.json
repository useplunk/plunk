{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"a11y": {
				"useKeyWithClickEvents": "off",
				"noSvgWithoutTitle": "off",
				"useButtonType": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noStaticOnlyClass": "off"
			}
		}
	},
	"formatter": {
		"indentStyle": "tab",
		"indentWidth": 1,
		"lineWidth": 120
	}
}
